<div>
    
    <form method="post" action="">
        <input type="text" name="pessoas" placeholder="nome">
        <input type="number" name="pessoas" placeholder="idade">
        <input type="submit" name="acao" value="Insert">
    </form>
    
    <ul id="list">
        <% for(let i = 0; i < pessoas.length; i++) { %>
        <li class="list-item">
            Nome: <%= pessoas[i].nome %> | <a href="/deletar/<%= i %>">X</a>
        </li>
        <li class="list-item">
            Idade: <%= pessoas[i].idade %>
            <br>
            <br>
        </li>
        <% } %>
    </ul>

</div>